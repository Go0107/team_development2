<div class="l-main">
  <div class="l-main__header">
    <h2 class="l-main__header__title text-green">日報を投稿する</h2>
  </div>
  <div class="l-form">
    <%= form_with model: @report, local: true, class: 'p-form__input' do |f| %>
      <div class="p-form__input-field">
        <%= f.label :"学習時間を選択する" %>
        <%= f.text_field :"study_time", autofocus: true %>
      </div>
      
      <div class="p-form__input-field">
        <%= f.label :"学習内容", class: 'require' %>
        <%= f.text_area :study_content, autofocus: true %>
      </div>

      <div class="p-form__input-field">
        <%= f.label :"振り返り", class: 'require' %>
        <%= f.text_area :reflection, autofocus: true %>
      </div>

      <div class="p-form__input-submit">
        <%= f.submit "投稿する", class: 'p-button c-button--submit' %>
      </div>
    <% end %>
  </div>
</div>
